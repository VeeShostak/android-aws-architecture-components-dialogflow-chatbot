<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"

xmlns:tools="http://schemas.android.com/tools"

android:layout_width="match_parent"

android:layout_height="wrap_content"

android:paddingTop="8dp">
<ImageView
    android:id="@+id/message_image_profile"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@drawable/circle"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent" />

<TextView
    android:id="@+id/message_name"
    android:text="Fiona"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    app:layout_constraintLeft_toRightOf="@+id/message_image_profile"
    android:layout_marginLeft="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/out_message_bg"

        android:maxWidth="240dp"
        android:text="hi, how are you?"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/message_image_profile"
        app:layout_constraintTop_toBottomOf="@+id/message_name" />

<TextView
    android:id="@+id/message_time"
    android:text="11:40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    app:layout_constraintLeft_toRightOf="@+id/message_body"
    android:layout_marginLeft="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/message_body" />

</android.support.constraint.ConstraintLayout>